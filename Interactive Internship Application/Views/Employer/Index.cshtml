@{

    Layout = "~/Views/Shared/_EmployerLayout.cshtml";

}
<!DOCTYPE html>
<html>
<meta charset="UTF-8">
<head>
    <!-- Link CSS styling code to html page-->
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />

    <div style="text-align: center">
        <h1><i>College of Business Administration</i></h1>
        <h2>Internship Application Login</h2>
        <br />

        <body>
            <!-- Login Buttons-->
            <form asp-action="Login" asp-controller="Employer" asp-antiforgery="true" method="post">
                @Html.AntiForgeryToken();
                
                
                <div class="form-group">
                    <b>Email:</b> <br>
                    <input type="text" id="emailBox" autocomplete="off" name="email"><br>
                    <b>Pin: </b>  <br>
                    <input type="password" id="passBox" autocomplete="off" name="pass"><br> <br>
                    <!-- NEEDS TO BE CHANGED IN THE FUTURE-->
                    <!-- validate() determines if valid login; if valid, send to appropriate page-->
                    <input type="submit" class="buttonMenu" name="response" value="Login" formaction=@Url.Action("Login")
                           formmethod="post">
                    <br><br>
                </div>


                
               
                    <font size=".75em">
                        *Login using the credentials emailed to you.
                        If you have forgotten your pin, please click  @Html.ActionLink("here ", "ClickToEmployerForgotLogin", "Employer")
                        to have a new one emailed to you.
                    </font>

            </form>

        </body>
    </div>
</head>

</html> <!-- end login page code-->